<div class="row">
  <% if @tenant.errors.any? %>
    <div class="alert alert-danger alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <% @tenant.errors.full_messages.each do |msg| %>
        <ul>
          <%= msg %>
        </ul>
      <% end %>
    </div>
  <% end %>
  <div class="col-sm-6">
    <header>
      <h1>Add New Tenant</h1>
    </header>
    <%= form_for @tenant, html: { class: 'well' } do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :gender %>
        <%= f.text_field :gender, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :dob %>
        <%= f.text_field :dob, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :no_of_dependents %>
        <div class="row">
          <div class="col-sm-3">
            <%= f.text_field :no_of_dependents, class: 'form-control' %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :occupation %>
        <%= f.text_field :occupation, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :annual_income %>
        <%= f.text_field :annual_income, class: 'form-control' %>
      </div>
      <%= f.submit 'Create Tenant', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
